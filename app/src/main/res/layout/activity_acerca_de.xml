<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textAlignment="center"
    tools:context="dm.oscar.appdms.ActivityAcercaDe"
    android:background="#07cebc"
    style="@style/Animation.AppCompat.Dialog"
    android:transitionGroup="false">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Esta aplicacion ha sido creada para para beneficios de personas que aveces no saben sobre los apoyos y noticias que salen para personas que necesitan apoyos y que no saben que existen muchos apoyos o informacion ideales que las cuales les pueden ayudar y todo lo demas....."
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView2"
        android:textIsSelectable="true"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca de AppDMS"
        android:id="@+id/textView2"
        android:password="false"
        android:phoneNumber="false"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="gravity"
        android:editable="false"
        android:elegantTextHeight="true"
        android:textColor="@color/abc_primary_text_material_light" />


</RelativeLayout>
